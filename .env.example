# The CLI auto-loads .env from the current working directory.
# Required: Figma OAuth token for MCP authentication
FIGMA_OAUTH_TOKEN=your_figma_oauth_token_here

# Optional: Figma MCP endpoint (defaults to https://mcp.figma.com/mcp)
FIGMA_MCP_URL=https://mcp.figma.com/mcp

# Optional: Figma region header (defaults to us-east-1)
FIGMA_REGION=us-east-1

# Optional: MCP request timeout in milliseconds (defaults to 60000)
FIGMA_MCP_TIMEOUT_MS=60000

# Optional: Max number of key sublayers to expand when design context is truncated (defaults to 16)
FIGMA_SUBLAYER_EXPANSION_LIMIT=16
